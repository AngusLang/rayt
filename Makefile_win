.PHONY: all clean

CC=cl
APP=build/app
ENTRY_POINT=src/main_new.c

INC=-Isrc/foundation -Isrc/public
FOUNDATION_SRC=src/foundation/allocator.c src/foundation/worker.c

all: $(FOUNDATION_SRC)
	echo $(UNAME_S)
	$(CC) $(CCFLAGS) $(INC) ${LIBS} -o $(APP) $(ENTRY_POINT) $(FOUNDATION_SRC)

run: all
	$(APP)
