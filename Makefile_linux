.PHONY: all clean

CC=clang
APP=build/app
ENTRY_POINT=src/main_new.c

INC=-I/usr/local/include \
	-Isrc/public \
	-Isrc/foundation \
	-Isrc/foundation/linux \
	-Iexternal/glad/include
LIBS=-L/usr/local/lib -lglfw -lm

all: collect
	mkdir -p build
	$(CC) $(CCFLAGS) $(INC) -o $(APP) $(ENTRY_POINT) $(SOURCE_FILES) $(LIBS)

run: all
	$(APP)